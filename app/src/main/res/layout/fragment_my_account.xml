<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.fixirman.provider.view.fragment.MyAccountFragment"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:visibility="gone"
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        app:fabSize="mini"
                        android:layout_marginStart="4dp"
                        app:backgroundTint="@color/white"
                        android:onClick="@{(v)->fragment.onClick(v)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:layout_marginStart="16dp"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        app:layout_constraintEnd_toStartOf="@id/mb_logout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_back"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        app:rippleColor="@color/red"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->fragment.onClick(v)}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/pb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminateTint="@color/red"
                        app:layout_constraintStart_toStartOf="@id/mb_logout"
                        app:layout_constraintEnd_toEndOf="@id/mb_logout"
                        app:layout_constraintTop_toTopOf="@id/mb_logout"
                        app:layout_constraintBottom_toBottomOf="@id/mb_logout"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="16dp"
                android:onClick="@{(v)->fragment.onClick(v)}"
                app:layout_constraintTop_toBottomOf="@id/toolBar"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/iv_userProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Name Here"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:textSize="22sp"
                android:fontFamily="@font/rokkitt"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/cv_profile"
                app:layout_constraintStart_toEndOf="@id/cv_profile"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Phone Here"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toEndOf="@id/cv_profile"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:fabSize="mini"
                android:rotation="180"
                android:onClick="@{(v)->fragment.onClick(v)}"
                app:layout_constraintBottom_toBottomOf="@id/cv_profile"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_myAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="32dp"
                android:gravity="center_vertical"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:background="@drawable/background_card_black_alpha"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/cv_profile"/>

            <TextView
                android:id="@+id/tv_contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Us"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_message"
                android:drawablePadding="32dp"
                android:gravity="center_vertical"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:background="@drawable/background_card_black_alpha"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_myAddress"/>

            <TextView
                android:id="@+id/tv_privacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Privacy Policy"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="32dp"
                android:gravity="center_vertical"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:background="@drawable/background_card_black_alpha"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_contactUs"/>

            <TextView
                android:id="@+id/tv_aboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About Us"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_contact"
                android:drawablePadding="32dp"
                android:gravity="center_vertical"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:background="@drawable/background_card_black_alpha"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_privacyPolicy"/>

            <TextView
                android:id="@+id/tv_faqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FAQs and Terms"
                android:textSize="12sp"
                android:fontFamily="@font/arial_simple"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_faq"
                android:drawablePadding="32dp"
                android:gravity="center_vertical"
                android:onClick="@{(v)->fragment.onClick(v)}"
                android:background="@drawable/background_card_black_alpha"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_aboutUs"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>