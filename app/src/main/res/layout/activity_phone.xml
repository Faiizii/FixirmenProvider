<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.fixirman.provider.view.activity.PhoneActivity" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:layout_margin="16dp"
                android:src="@drawable/ic_back"
                android:onClick="@{(v)->activity.onClick(v)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_launcher_background"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_sendCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                android:padding="25dp">
                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/arial_simple"
                    android:text="Signin using phone number"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultCode="92"
                    app:ccp_countryPreference="PK"
                    app:ccp_showFlag="false"
                    app:ccp_enablePhoneAutoFormatter="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/il_phone"/>
                <View
                    android:id="@+id/view_phone"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@android:color/black"
                    app:layout_constraintStart_toStartOf="@id/ccp"
                    app:layout_constraintEnd_toEndOf="@id/ccp"
                    app:layout_constraintTop_toBottomOf="@+id/ccp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/il_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/ccp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_message">
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:textSize="14sp"
                        android:fontFamily="@font/arial_simple"
                        android:hint="Enter Phone Number"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:text="@string/send_code"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/arial_simple"
                    app:cornerRadius="16dp"
                    android:layout_marginTop="16dp"
                    android:onClick="@{(v)->activity.onClick(v)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/il_phone"/>
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/pbSendCode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/btn_sendCode"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sendCode"
                    app:layout_constraintStart_toStartOf="@id/btn_sendCode"
                    app:layout_constraintEnd_toEndOf="@id/btn_sendCode"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/ll_verifyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_sendCode">
                <TextView
                    android:id="@+id/tv_messageVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/arial_simple"
                    android:textSize="16sp"
                    android:text="We have sent you a 6 digit verification code Please Enter below "
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_messageVerify">
                    <com.mukesh.OtpView
                        android:id="@+id/otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:inputType="number"
                        app:itemCount="6"
                        app:viewType="rectangle"
                        android:background="@android:color/transparent"
                        style="@style/OtpWidget.OtpView"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:text="@string/verify"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    android:fontFamily="@font/arial_simple"
                    android:onClick="@{(v)->activity.onClick(v)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tl_code"/>
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/pbVerifyCode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/btn_verify"
                    app:layout_constraintBottom_toBottomOf="@id/btn_verify"
                    app:layout_constraintStart_toStartOf="@id/btn_verify"
                    app:layout_constraintEnd_toEndOf="@id/btn_verify"/>
                <TextView
                    android:id="@+id/tv_resendTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resend Code in 60s"
                    android:textSize="12sp"
                    android:fontFamily="@font/arial_simple"
                    android:textAlignment="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_verify"/>

                <LinearLayout
                    android:id="@+id/ll_resendCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_verify"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn't receive the OTP?"
                        android:textSize="12sp"
                        android:fontFamily="@font/arial_simple"
                        android:textAlignment="viewEnd"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tv_resendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend Code"
                        android:textSize="12sp"
                        android:fontFamily="@font/arial_simple"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:onClick="@{(view)->activity.onClick(view)}"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>