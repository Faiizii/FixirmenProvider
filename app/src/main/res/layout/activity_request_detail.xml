<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.fixirman.provider.view.activity.RequestDetailActivity" />
        <variable
            name="model"
            type="com.fixirman.provider.model.request.RequestDetail" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:fabSize="mini"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@color/white"
                    android:onClick="@{(v)->activity.onClick(v)}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_orderId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="REQ# 0"
                    android:text="@{`REQ# `+model.id}"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/toolBar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <View
                    android:id="@+id/view_hexagon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/icon_hexagone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <ImageView
                    android:id="@+id/iv_categoryImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="@id/view_hexagon"
                    app:layout_constraintEnd_toEndOf="@id/view_hexagon"
                    app:layout_constraintBottom_toBottomOf="@id/view_hexagon"
                    app:layout_constraintTop_toTopOf="@id/view_hexagon"/>
                <TextView
                    android:id="@+id/tv_categoryName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="No name"
                    android:text="@{model.categoryName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toStartOf="@id/tv_requestStatus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_hexagon"/>
                <TextView
                    android:id="@+id/tv_requestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="Searching..."
                    android:text="@{model.status}"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_initialCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="Rs. 0"
                    android:text="@{`Rs. `+model.initialCost}"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_categoryName"
                    app:layout_constraintStart_toStartOf="@id/tv_categoryName"/>
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toBottomOf="@id/view_hexagon"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:textColorHint="@color/white"
                    android:text="Address"
                    android:paddingTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/map"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="@{model.address}"
                    android:paddingBottom="8dp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv4"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/bg_main"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="Date"
                    android:text="@{model.date}"
                    android:gravity="center"
                    android:padding="10dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintEnd_toStartOf="@id/view1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:background="@color/dull_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"/>
                <TextView
                    android:id="@+id/tv_timeSlot"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/rokkitt"
                    android:hint="Time"
                    android:text="@{model.timeSlot}"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toTopOf="@id/tv_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/off_white"
                    app:layout_constraintTop_toBottomOf="@id/tv_date"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    app:layout_constraintTop_toBottomOf="@id/view2">
                    <View
                        android:id="@+id/pivot"
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rokkitt"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <EditText
                        android:visibility="gone"
                        android:id="@+id/et_bidInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Write your expertise"
                        android:fontFamily="@font/rokkitt"
                        android:maxLength="1000"
                        app:layout_constraintBottom_toTopOf="@id/btn_accept"
                        app:layout_constraintTop_toBottomOf="@id/tv_message"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_pending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:enabled="false"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/pivot"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/pivot"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_finish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Finish"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/pivot"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/red"
                        app:strokeColor="@color/red"
                        app:strokeWidth="1dp"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pivot"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="gone"
                        android:id="@+id/btn_fail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Failed"
                        android:textColor="@color/red"
                        app:strokeColor="@color/red"
                        app:strokeWidth="1dp"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pivot"/>
                    <RatingBar
                        android:id="@+id/rb_rateUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:fontFamily="@font/rokkitt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_message"/>
                    <EditText
                        android:id="@+id/et_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Write your experience"
                        android:fontFamily="@font/rokkitt"
                        android:maxLength="1000"
                        app:layout_constraintTop_toBottomOf="@id/rb_rateUser"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submitRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:fontFamily="@font/rokkitt"
                        android:onClick="@{(v)->activity.onClick(v)}"
                        app:layout_constraintTop_toBottomOf="@id/et_review"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/pb_statusChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/off_white"
                    app:layout_constraintTop_toBottomOf="@id/layout_worker"/>
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="Request Details"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toBottomOf="@id/view3"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="No description"
                    android:text="@{model.description}"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    app:layout_constraintTop_toBottomOf="@id/tv"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="User Details"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_userImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv3"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:id="@+id/iv_userImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.userName}"
                    app:layout_constraintTop_toTopOf="@id/cv_userImage"
                    app:layout_constraintStart_toEndOf="@id/cv_userImage"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="Service Requested"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toBottomOf="@id/cv_userImage"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_serviceType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="Standard"
                    android:text="@{model.serviceTypeName}"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv1"
                    app:layout_constraintBottom_toBottomOf="@id/tv1"
                    app:layout_constraintStart_toEndOf="@id/tv1"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="Created On"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_createdAt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="date/time"
                    android:text="@{model.createDate}"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv2"
                    app:layout_constraintBottom_toBottomOf="@id/tv2"
                    app:layout_constraintStart_toEndOf="@id/tv2"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>