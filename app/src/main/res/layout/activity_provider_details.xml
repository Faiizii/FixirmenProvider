<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.fixirman.provider.model.provider.ProviderDetail" />
        <variable
            name="activity"
            type="com.fixirman.provider.view.activity.ProviderDetailsActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tooalBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:fabSize="mini"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@color/white"
                    android:onClick="@{(v)->activity.onClick(v)}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingStart="16dp"
                    android:paddingEnd="1dp"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tooalBar"
            app:layout_constraintBottom_toTopOf="@id/mb_bookNow">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintHorizontal_weight="0.55"
                    app:layout_constraintEnd_toStartOf="@id/view2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:layout_constraintHorizontal_weight="0.45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_profilePic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="@id/view1"
                    app:layout_constraintEnd_toEndOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintBottom_toBottomOf="@id/view1">
                    <ImageView
                        android:id="@+id/iv_profilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_distanceAway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0.0 Km"
                    android:text="@{model.distanceAway+` Km`}"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toTopOf="@id/cv_profilePic"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_away"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Away"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_distanceAway"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/tv_priceValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="$0.0"
                    android:text="@{`$`+model.cost}"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintBottom_toTopOf="@id/tv_perHour"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_perHour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Per hour"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintBottom_toTopOf="@id/tv_avgRating"
                    app:layout_constraintTop_toBottomOf="@id/tv_away"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ratingStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_star"
                    android:text = "4.1"
                    android:minHeight="0dp"
                    app:iconPadding="0dp"
                    android:minWidth="0dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rokkitt"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintBottom_toTopOf="@id/tv_avgRating"/>
                <TextView
                    android:id="@+id/tv_ratingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintBottom_toBottomOf="@id/btn_ratingStars"
                    app:layout_constraintTop_toTopOf="@id/btn_ratingStars"
                    app:layout_constraintStart_toEndOf="@id/btn_ratingStars"/>
                <TextView
                    android:id="@+id/tv_avgRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Avg. Rating"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintBottom_toBottomOf="@id/cv_profilePic"
                    app:layout_constraintStart_toEndOf="@id/cv_profilePic"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Name Here"
                    android:text="@{model.fullName}"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintTop_toTopOf="@id/iv_phoneCall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_phoneCall"/>
                <ImageView
                    android:id="@+id/iv_phoneCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_phone"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toStartOf="@id/btn_message"
                    app:layout_constraintTop_toTopOf="@id/btn_message"/>
                <ImageView
                    android:id="@+id/btn_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_profilePic"/>
                <TextView
                    android:id="@+id/tv_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Unknown"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tabGravity="center"
                    app:tabPaddingStart="12dp"
                    app:tabPaddingEnd="12dp"
                    app:tabSelectedTextColor="@color/colorAccent"
                    app:tabIndicator="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profession">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About" />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating"/>
                </com.google.android.material.tabs.TabLayout>
                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="About Employee Here"
                    android:text="@{model.description}"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toBottomOf="@id/tabs"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/rv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tabs"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_noDataFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Review"
                    android:fontFamily="@font/arial_simple"
                    android:textSize="22sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabs"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_bookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:onClick="@{(v)->activity.onClick(v)}"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>