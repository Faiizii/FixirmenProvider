<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.fixirman.provider.view.fragment.AppointmentDetailFragment" />
        <variable
            name="model"
            type="com.fixirman.provider.model.appointment.Appointment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        app:fabSize="mini"
                        android:layout_marginStart="4dp"
                        app:backgroundTint="@color/white"
                        android:onClick="@{(v)->fragment.onClick(v)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Job Status"
                        android:layout_marginStart="16dp"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_back"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/rokkitt"
                    android:gravity="center"
                    android:background="@drawable/background_text_view_number_selector"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_pendingStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toTopOf="@id/tv_one"
                    app:layout_constraintStart_toEndOf="@id/tv_one"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <TextView
                    android:id="@+id/tv_pendingStatusDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/rokkitt"
                    android:textSize="12sp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_pendingStatus"
                    app:layout_constraintStart_toStartOf="@id/tv_pendingStatus"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/tv_one"
                    app:layout_constraintEnd_toEndOf="@id/tv_one"
                    app:layout_constraintTop_toBottomOf="@id/tv_one"
                    app:layout_constraintBottom_toTopOf="@id/tv_two"/>

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="@font/rokkitt"
                    android:gravity="center"
                    android:background="@drawable/background_text_view_number_selector"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_one"
                    app:layout_constraintBottom_toTopOf="@id/tv_three"/>
                <TextView
                    android:id="@+id/tv_acceptStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toTopOf="@id/tv_two"
                    app:layout_constraintStart_toEndOf="@id/tv_two"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <TextView
                    android:id="@+id/tv_acceptStatusDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/rokkitt"
                    android:textSize="12sp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_acceptStatus"
                    app:layout_constraintStart_toStartOf="@id/tv_acceptStatus"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/tv_two"
                    app:layout_constraintEnd_toEndOf="@id/tv_two"
                    app:layout_constraintTop_toBottomOf="@id/tv_two"
                    app:layout_constraintBottom_toTopOf="@id/tv_three"/>
                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:fontFamily="@font/rokkitt"
                    android:gravity="center"
                    android:background="@drawable/background_text_view_number_selector"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_two"
                    app:layout_constraintBottom_toTopOf="@id/tv_four"/>
                <TextView
                    android:id="@+id/tv_inProcessStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="In Process"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toTopOf="@id/tv_three"
                    app:layout_constraintStart_toEndOf="@id/tv_three"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <TextView
                    android:id="@+id/tv_inProcessStatusDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/rokkitt"
                    android:textSize="12sp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_inProcessStatus"
                    app:layout_constraintStart_toStartOf="@id/tv_inProcessStatus"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/tv_three"
                    app:layout_constraintEnd_toEndOf="@id/tv_three"
                    app:layout_constraintTop_toBottomOf="@id/tv_three"
                    app:layout_constraintBottom_toTopOf="@id/tv_four"/>
                <TextView
                    android:id="@+id/tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:fontFamily="@font/rokkitt"
                    android:gravity="center"
                    android:background="@drawable/background_text_view_number_selector"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/mb_message"/>
                <TextView
                    android:id="@+id/tv_finishedStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Finished"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toTopOf="@id/tv_four"
                    app:layout_constraintStart_toEndOf="@id/tv_four"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>
                <TextView
                    android:id="@+id/tv_finishedStatusDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/rokkitt"
                    android:textSize="12sp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_finishedStatus"
                    app:layout_constraintStart_toStartOf="@id/tv_finishedStatus"
                    app:layout_constraintEnd_toStartOf="@id/mb_message"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_messageCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/iv_employeeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mb_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:fontFamily="@font/rokkitt"
                    android:onClick="@{(v)->fragment.onClick(v)}"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:layout_constraintTop_toBottomOf="@id/cv_messageCard"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/mb_message">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_profileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="@id/cv_details"
                        app:layout_constraintStart_toStartOf="parent">
                        <ImageView
                            android:id="@+id/iv_profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <View
                        android:id="@+id/anchor"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@id/cv_profileImage"
                        app:layout_constraintEnd_toEndOf="@id/cv_profileImage"
                        app:layout_constraintTop_toTopOf="@id/cv_profileImage"
                        app:layout_constraintBottom_toBottomOf="@id/cv_profileImage"/>
                    <View
                        android:id="@+id/cv_details"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:minHeight="120dp"
                        android:alpha="0.7"
                        android:background="@drawable/background_card_black_alpha"
                        app:layout_constraintStart_toEndOf="@id/anchor"
                        app:layout_constraintEnd_toEndOf="@id/layout_details"
                        app:layout_constraintTop_toTopOf="@id/layout_details"
                        app:layout_constraintBottom_toBottomOf="@id/layout_details"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cv_profileImage">
                        <TextView
                            android:id="@+id/tv_employeeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.employeeName}"
                            android:hint="Name"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/tv_employeeCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.categoryName}"
                            android:hint="Employee Category"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintTop_toBottomOf="@id/tv_employeeName"
                            app:layout_constraintStart_toStartOf="@id/tv_employeeName"/>
                        <TextView
                            android:id="@+id/tv_jobTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Job Task"
                            android:fontFamily="@font/rokkitt"
                            android:layout_marginTop="16dp"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintTop_toBottomOf="@id/tv_employeeCategory"
                            app:layout_constraintStart_toStartOf="@id/tv_employeeName"/>
                        <TextView
                            android:id="@+id/tv_employeeSubCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.subCategoryName}"
                            android:hint="Sub Category"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toBottomOf="@id/tv_jobTask"
                            app:layout_constraintStart_toStartOf="@id/tv_employeeName"/>

                        <TextView
                            android:id="@+id/tv_jobDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Job Date"
                            android:fontFamily="@font/rokkitt"
                            android:layout_marginTop="16dp"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintEnd_toStartOf="@id/tv_jobCost"
                            app:layout_constraintTop_toBottomOf="@id/tv_employeeSubCategory"
                            app:layout_constraintStart_toStartOf="@id/tv_employeeName"/>
                        <TextView
                            android:id="@+id/tv_dateTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{model.appointmentDate}"
                            android:hint="0th MMMM, 00:00 aa"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toBottomOf="@id/tv_jobDate"
                            app:layout_constraintStart_toStartOf="@id/tv_jobDate"
                            app:layout_constraintEnd_toEndOf="@id/tv_jobDate"/>

                        <TextView
                            android:id="@+id/tv_jobCost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Job Cost"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintTop_toTopOf="@id/tv_jobDate"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_jobDate"/>
                        <TextView
                            android:id="@+id/tv_costValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{model.cost}"
                            android:hint="$0"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toBottomOf="@id/tv_jobCost"
                            app:layout_constraintStart_toStartOf="@id/tv_jobCost"
                            app:layout_constraintEnd_toEndOf="@id/tv_jobCost"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Address"
                            android:fontFamily="@font/rokkitt"
                            android:layout_marginTop="16dp"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintTop_toBottomOf="@id/tv_dateTime"
                            app:layout_constraintStart_toStartOf="@id/tv_employeeName"/>

                        <TextView
                            android:id="@+id/tv_addressValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.adress}"
                            android:hint="Address Here"
                            android:fontFamily="@font/rokkitt"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toBottomOf="@id/tv_address"
                            app:layout_constraintStart_toStartOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</layout>