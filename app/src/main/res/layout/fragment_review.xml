<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.fixirman.provider.view.fragment.ReviewFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textAlignment="center"
            android:text="Your Current Ratings"
            android:gravity="center"
            android:fontFamily="@font/rokkitt"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_avgRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0.0"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/ic_star_big"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:fontFamily="@font/rokkitt"
            android:background="@drawable/background_round_corner"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Avg. Rating by 0 People"
            android:gravity="center"
            android:fontFamily="@font/rokkitt"
            android:padding="8dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_avgRating"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_card_black_alpha"
            app:layout_constraintTop_toTopOf="@id/layout_summary"
            app:layout_constraintBottom_toBottomOf="@id/layout_summary"
            app:layout_constraintEnd_toEndOf="@id/layout_summary"
            app:layout_constraintStart_toStartOf="@id/layout_summary"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_message">
            <TextView
                android:id="@+id/tv_rating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_star"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                android:id="@+id/sb_rating5"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:thumb="@null"
                app:layout_constraintEnd_toStartOf="@id/tv_rating5Count"
                app:layout_constraintTop_toTopOf="@id/tv_rating5"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating5"
                app:layout_constraintStart_toEndOf="@id/tv_rating5"/>
            <TextView
                android:id="@+id/tv_rating5Count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="@id/tv_rating5"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating5"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_star"
                android:fontFamily="@font/rokkitt"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_rating5"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                android:id="@+id/sb_rating4"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:thumb="@null"
                app:layout_constraintEnd_toStartOf="@id/tv_rating4Count"
                app:layout_constraintTop_toTopOf="@id/tv_rating4"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating4"
                app:layout_constraintStart_toEndOf="@id/tv_rating4"/>
            <TextView
                android:id="@+id/tv_rating4Count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="@id/tv_rating4"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating4"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_star"
                android:fontFamily="@font/rokkitt"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_rating4"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                android:id="@+id/sb_rating3"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:thumb="@null"
                app:layout_constraintEnd_toStartOf="@id/tv_rating3Count"
                app:layout_constraintTop_toTopOf="@id/tv_rating3"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating3"
                app:layout_constraintStart_toEndOf="@id/tv_rating3"/>
            <TextView
                android:id="@+id/tv_rating3Count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="@id/tv_rating3"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_star"
                android:fontFamily="@font/rokkitt"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_rating3"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                android:id="@+id/sb_rating2"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:thumb="@null"
                app:layout_constraintEnd_toStartOf="@id/tv_rating2Count"
                app:layout_constraintTop_toTopOf="@id/tv_rating2"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating2"
                app:layout_constraintStart_toEndOf="@id/tv_rating2"/>
            <TextView
                android:id="@+id/tv_rating2Count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="@id/tv_rating2"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_star"
                android:fontFamily="@font/rokkitt"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toBottomOf="@id/tv_rating2"
                app:layout_constraintStart_toStartOf="parent"/>
            <SeekBar
                android:id="@+id/sb_rating1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:thumb="@null"
                app:layout_constraintEnd_toStartOf="@id/tv_rating1Count"
                app:layout_constraintTop_toTopOf="@id/tv_rating1"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating1"
                app:layout_constraintStart_toEndOf="@id/tv_rating1"/>
            <TextView
                android:id="@+id/tv_rating1Count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="0"
                android:fontFamily="@font/rokkitt"
                style="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintTop_toTopOf="@id/tv_rating1"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating1"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Recent Ratings"
            android:gravity="center"
            android:fontFamily="@font/rokkitt"
            android:paddingStart="8dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="8dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_summary"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_seeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read all"
            android:fontFamily="@font/rokkitt"
            android:textAllCaps="false"
            android:onClick="@{(v)->fragment.onClick(v)}"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_recent"
            app:layout_constraintBottom_toBottomOf="@id/tv_recent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rv_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/vh_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_recent"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_noRatingFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="No Rating"
            android:gravity="center"
            android:fontFamily="@font/rokkitt"
            android:padding="8dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_rating"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>